// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Pastikan ini sesuai provider database kamu (Neon biasanya postgresql)
  url      = env("DATABASE_URL")
}

// --- 1. MODEL USER (AKUN) ---
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String    // Password akan di-hash (dienkripsi)
  role          String    @default("USER") // Bisa "ADMIN" atau "USER"
  image         String?   // Foto profil (opsional)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relasi: Satu User bisa punya banyak Order
  orders        Order[]
}

// --- 2. MODEL PRODUCT (IKAN) ---
model Product {
  id          String   @id @default(cuid())
  name        String
  price       Int      // Harga per item/kg
  category    String   // Laut, Tawar, dll
  description String?
  imageUrl    String?
  isAvailable Boolean  @default(true) // Fitur stok kosong/ada
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi ke item pesanan
  orderItems  OrderItem[]
}

// --- 3. MODEL ORDER (PESANAN) ---
model Order {
  id            String      @id @default(cuid())
  
  // Data Pengiriman (Bisa beda dengan nama akun)
  customerName  String
  customerPhone String
  address       String
  
  // Data Keuangan
  totalPrice    Int
  status        String      @default("PENDING") // PENDING -> PAID -> PROCESSED -> SHIPPED -> COMPLETED
  
  // Persiapan Payment Gateway (Midtrans)
  snapToken     String?     // Token transaksi dari Midtrans
  paymentUrl    String?     // Link pembayaran (opsional)

  // Relasi ke User (Wajib Login)
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relasi ke Item
  items         OrderItem[]
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

// --- 4. MODEL ORDER ITEM (DETAIL BELANJAAN) ---
model OrderItem {
  id          String   @id @default(cuid())
  
  // Relasi ke Order Utama
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  // Relasi ke Produk (Disimpan ID-nya saja)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  
  // Snapshot Data (Penting agar histori harga tidak berubah meski harga produk naik)
  productName String
  price       Int      // Harga saat dibeli
  quantity    Int
}